<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_gray_color</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:windowAnimationStyle">@style/BaseActivityAnimation</item>-->

    </style>

    <style name="AppTheme.BgWhite">
        <item name="android:windowBackground">@color/background_white_color</item>
    </style>

    <!-- 适用于欢迎界面避免第一次进来白屏或黑屏 -->
    <style name="AppTheme.Splash">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Splash.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Main">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="titleBar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="bgatitlebar_titleTextColor">@android:color/white</item>
        <item name="bgatitlebar_titleTextSize">@dimen/text_size_medium</item>
        <item name="bgatitlebar_leftAndRightTextColor">@android:color/white</item>
        <item name="bgatitlebar_leftAndRightTextSize">@dimen/basic_text_size</item>
        <item name="bgatitlebar_isTitleTextBold">false</item>
    </style>

    <!--白色按钮-->
    <style name="widget_text_btn_white_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/btn_login_mode</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--紫色按钮-->
    <style name="widget_text_btn_purple_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/btn_purple</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="widget_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGray</item>
    </style>

    <!--设置item背景-->
    <style name="widget_setting_item_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/selector_list_item</item>
    </style>

    <style name="widget_text_view_black_bg_style" parent="@style/widget_setting_item_bg_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="widget_text_view_black_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="widget_text_view_gray_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorGray</item>
    </style>

    <!--关注按钮样式-->
    <style name="widget_btn_attention_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">68dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/btn_attention_color</item>
        <item name="android:paddingLeft">@dimen/view_margin_15</item>
        <item name="android:paddingRight">@dimen/view_margin_15</item>
        <item name="android:paddingTop">@dimen/view_margin_6</item>
        <item name="android:paddingBottom">@dimen/view_margin_6</item>
        <item name="android:background">@drawable/btn_attention</item>
    </style>

    <style name="floag_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="NormalDialog" parent="Theme.AppCompat.Light.Dialog.Alert" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>

    </style>
    <style name="ConfirmDialogStyle" parent="NormalDialog">

        <!--<item name="windowMinWidthMinor">90%</item>-->


        <!--<item name="android:textColorPrimary">#000000</item>-->

        <!--<item name="colorAccent">#0accac</item>-->
    </style>


    <!-- Input dialog theme. -->
    <style name="InputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textColorHint">@color/c9</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="PlayerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/PlayerAnimation</item>
    </style>

    <style name="PlayerAnimation" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slice_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slice_out_right</item>
    </style>

    <style name="BottomDialog" parent="AppTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="ActionSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
    </style>

    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

</resources>
