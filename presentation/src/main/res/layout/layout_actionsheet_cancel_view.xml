<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_gray_color"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/widget_text_view_black_style"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/view_margin_10"
        android:background="@drawable/selector_list_item"
        android:gravity="center"
        android:minHeight="48dp"
        android:paddingBottom="@dimen/view_margin_10"
        android:paddingTop="@dimen/view_margin_10"
        android:text="@string/btn_cancel"
        android:textSize="16sp" />

</LinearLayout>
